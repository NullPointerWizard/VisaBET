{% extends 'base.html.twig' %}

{%  block metacharset %}
    <meta charset="UTF-8" />
{% endblock %}

{% block body %}
    <h1 class="page-header text-center">
        Bienvenue dans l'espace de gestion de {{ nomOrganisme }}</br>
    </h1>
    <h2>Vos Affaires</h2>
    
    <div class="">
        <a href = "{{ path('creer_affaire', {'nomOrganisme':nomOrganisme, 'nomUtilisateur':nomUtilisateur}) }}"><button type="button" class="btn btn-primary"><i class="fa fa-plus-square fa-lg" aria-hidden="true"></i> Créer une affaire</button></a>
    </div>
    
    <div>
    <table class="table table-striped">
    	<thead>
    		<tr>
    			<th>ID Affaire</th>
    			<th>N°</th>
    			<th>Année</th>
    			<th>Nom</th>
    			<th>Date Butoir</th>
    			<th>A faire</th>    			
    		</tr>
        </thead>
    	<tbody>
    		{% for affaire in listeAffairesUtilisateur %}
    		<tr>
    			<td>{{ affaire.idAffaire }}</td>  			
                <td>{{ affaire.numeroAffaire}}</td>
                <td>{{ affaire.year}}</td>
                <td>
                    <a href = "{{ path('affaire_details',{'nomOrganisme':nomOrganisme, 'nomUtilisateur':nomUtilisateur, 'numeroAffaire':affaire.numeroAffaire, 'idAffaire':affaire.idAffaire}) }}">
                        {{ affaire.nomAffaire }} 
                        <i class="fa fa-file-pdf-o fa-lg text-right" aria-hidden="true"></i>
                    </a>
                </td>
                <td>{{ affaire.dateButoir|date('d/m/Y') }}</td>
                <td>{{ affaire.travailAEffectuer }}</td>
    		</tr>
    		{% endfor %}
    	</tbody>
    </table>
    </div>
        
    
{%  endblock %}