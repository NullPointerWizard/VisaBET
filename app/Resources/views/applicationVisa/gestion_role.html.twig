{% extends 'base.html.twig' %}

{%  block metacharset %}
    <meta charset="UTF-8" />
{% endblock %}

{%  block pageTitle %}Gestion des roles{% endblock %}

{% block body %}
    <a href="{{ path('gestion') }}"><i class="fa fa-reply fa-2x" aria-hidden="true"></i></a>

    <h3>Roles</h3>
    <div class="container">
        <div class="row">
    		<div class="col-xs-12">
                {{ form_start(roleForm)}}
                {{ form_widget(roleForm) }}
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus-square fa-lg" aria-hidden="true"></i> Ajouter un role
                </button>
                {{ form_end(roleForm) }}
            </div>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du role</th>
            </tr>
        </thead>
        <tbody>
            {% for role in listeRole %}
            <tr>
                <td>{{ role.idRoleContact }} </td>
                <td>{{ role.nomRole }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
