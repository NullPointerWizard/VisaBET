{% extends 'base.html.twig' %}

{%  block metacharset %}
    <meta charset="UTF-8" />
{% endblock %}

{% block pageTitle %}Travail à faire{% endblock %}

{% block body %}
<h3>Liste des documents à traiter</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Type</th>
            <th>Nom du fichier</th>
            <th>Date réception</th>
            <th>Date limite de visa</th>
            <th>Nom réception</th>
        </tr>
    </thead>
    <tbody>
        {% for document in listeDocuments %}
        <tr>
            <td>{{ document.type }} </td>
            <td>{{ document.filename }}</td>
            <td>{{ document.dateReception|date('d/m/Y') }}</td>
            <td>{{ document.dateLimiteVisa|date('d/m/Y') }}</td>
            <td>{{ document.originalFilename }}</td>
        </tr>
        {% endfor %}
    </tbody>

</table>
{% endblock %}
