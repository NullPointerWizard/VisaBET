                <td>{{ item.tag }}</td>
                <td>{{ item.nomItem }}</td>
                <td>
                  
                </td>
            </tr>
            {% endfor %}
            
            
            <!-- NDC -->
            <tr>    
                <td>NDC</td>
                <td></td><td></td><td></td>
            </tr>
