{% extends 'base.html.twig' %}

{%  block metacharset %}
    <meta charset="UTF-8" />
{% endblock %}

{% block body %}
    <h1 class="page-header text-center">
        Affaire {{ affaire.numeroAffaire }} : {{ affaire.nomAffaire }} 
        <a href = "{{ path('affaire_details',{'nomOrganisme':nomOrganisme, 'nomUtilisateur':nomUtilisateur, 'numeroAffaire':affaire.numeroAffaire, 'idAffaire':affaire.idAffaire}) }}">
            <i class="fa fa-reply" aria-hidden="true"></i>
        </a>
    </h1>
    <h2 class="page-header text-center">
        Lot N°{{ lot.numeroLot  }}  {{ lot.nomLot }}</br>
   </h2>
   
   <h3>Items</h3>
   <div>
    <table class="table table-striped">
