            </tr>
            {% endfor %}
            
            
            <!-- MATERIEL -->
            <tr>    
                <td>Materiel</td>
                <td></td><td></td><td></td>
            </tr>
            {% for item in listeItemsMaterielLot %}
            <tr>
                <td></td>
                <td>{{ item.tag }}</td>
                <td>{{ item.nomItem }}</td>
                <td></td>
            </tr>
            {% endfor %}
            
            
            <!-- AUTRE -->
            <tr>    
                <td>Autre</td>
                <td></td><td></td><td></td>
            </tr>
            {% for item in listeItemsAutreLot %}
            <tr>
                <td></td>
                <td>{{ item.tag }}</td>
                <td>{{ item.nomItem }}</td>
                <td></td>
            </tr>
            {% endfor %}
            
        </tbody>
    </table>
   </div>
   
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h3>Nouvel Item</h3>
                <button type="submit" class="btn btn-primary">
                     <i class="fa fa-plus-square fa-lg" aria-hidden="true"></i> Créer item
                </button>
            </div>
        </div>      
    </div>

{% endblock %}