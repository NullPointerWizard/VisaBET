{% extends 'base.html.twig' %}

{%  block metacharset %}
    <meta charset="UTF-8" />
{% endblock %}

{% block pageTitle %}Noms des lots{% endblock %}

{% block body %}
<a href="{{ path('gestion') }}"><i class="fa fa-reply fa-2x" aria-hidden="true"></i></a>

<h2>Liste des noms de lots</h2>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-plus-square fa-lg" aria-hidden="true"></i> Ajouter
            </button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <th>Id</th>
        <th>Nom de lot</th>
    </thead>
    <tbody>
    {% for nomLot in listeNomsLot %}
        <tr>
            <td>{{ nomLot.idNomLot }}</td>
            <td>{{ nomLot }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
