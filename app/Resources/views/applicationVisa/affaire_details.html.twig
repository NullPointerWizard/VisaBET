{% extends 'base.html.twig' %}

{%  block metacharset %}
    <meta charset="UTF-8" />
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/dropzone.css') }}" />
{% endblock %}

{% block body %}
    <h2 class="text-center">
        Affaire {{ affaire.numeroAffaire }}</br>
        {{ affaire.nomAffaire }}
    </h2>

    <h3>Allotissement</h3>
    <div class="container">
    	<div class="row">
    		<div class="col-xs-12">
    			{{ form_start(lotForm) }}
    			{{ form_row(lotForm.numeroLot) }}
                {{ form_row(lotForm.idNomLot) }}
                {{ form_row(lotForm.affaire, { 'attr': {'class': 'hidden-row'} }) }}
    			<button type="submit" class="btn btn-primary">
    			     <i class="fa fa-plus-square fa-lg" aria-hidden="true"></i> Définir un lot
    			</button>
    			{{ form_end(lotForm) }}
    		</div>
    	</div>
	</div>
	<table class="table table-striped">
        <thead>
            <tr>
                <th>N°</th>
                <th>Nom du lot</th>
            </tr>
        </thead>
        <tbody>
            {% for lot in allotissement %}
            <tr>
                <td>{{ lot.numeroLot }}</td>
                <td>
                    <a href="{{ path('gestion_items',{'numeroAffaire':affaire.numeroAffaire, 'numeroLot':lot.numeroLot}) }}">
                        {{ lot.NomLot }}
                    </a>
                </td>
            </tr>
                {% for item in listeItems[lot.idLot] %}
                    <tr>
                        <td></td>
                        <td>
                        {{ item.idItem }} {{ item.NomItem }}
                        {% if listeVisas[ item.idItem ] is defined %}
                            {% if listeVisas[ item.idItem ] is not null %}
                                {{ listeVisas[item.idItem].etatVisa }}
                            {% else %}
                                NT
                            {% endif %}
                        {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>


    <h3>Documents</h3>
    <div class="container">
        <div class="row">
    		<div class="col-xs-12">
                {{ form_start(filesForm)}}
                {{ form_widget(filesForm) }}
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus-square fa-lg" aria-hidden="true"></i> Ajouter un document
                </button>
                {{ form_end(filesForm) }}
            </div>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Type</th>
                <th>Nom du fichier</th>
                <th>Date réception</th>
                <th>Date limite de visa</th>
                <th>Etat</th>
                <th>Emplacement</th>
            </tr>
        </thead>
        <tbody>
            {% for document in listeDocumentsAffaire %}
            <tr>
                <td>{{ document.type }} </td>
                <td>{{ document.filename }}</td>
                <td>{{ document.dateReception|date('d/m/Y') }}</td>
                <td>{{ document.dateLimiteVisa|date('d/m/Y') }}</td>
    			{% if document.etat == 0 %}
    			 <td class="red">NT</td>
    			{% else %}
    			 <td class="green">OK</td>
    			{% endif %}
    			<td>{{ document.path }}</td>
            </tr>
            {% endfor %}
        </tbody>

    </table>


    <h3>Personnes</h3>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                {{ form_start(utilisateurForm) }}
                {{ form_row(utilisateurForm.utilisateurs) }}

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus-square fa-lg" aria-hidden="true"></i> Ajouter
                </button>
                {{ form_end(utilisateurForm) }}
            </div>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Organisme</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Tel</th>
            </tr>
        </thead>
        <tbody>
            {% for utilisateur in listeUtilisateursAffaire %}
            <tr>
                <td>{{ utilisateur.idOrganisme }}</td>
                <td>{{ utilisateur.nom|upper }} {{utilisateur.prenom}} </td>
                <td>{{ utilisateur.mail }}</td>
                <td>{{ utilisateur.tel }}</td>
            </tr>
            {% endfor %}
        </tbody>

    </table>

{%  endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/dropzone/dropzone.js') }}" ></script>
{% endblock %}
