<!DOCTYPE html>
<html>
    <head>

        {% block metacharset %}
            <meta charset="UTF-8" />
        {% endblock %}
        <title>{% block title %}Visa 3000{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
            <link rel="stylesheet" href="{{ asset('css/fonts.css') }}">
            <link rel="stylesheet" href="{{ asset('css/applicationVisa.css') }}">
            <link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/font-awesome.min.css') }}">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('check.ico') }}" />
    </head>
    <body>
        <div class="search-bar">
            <form method="GET" action="" class="js-sea-search sea-search">
                <input type="search" name="q" placeholder="Rechercher une affaire" autocomplete="off" class="search-input">
            </form>
        </div>

        <header class="header">
            <a href="{{ path('affaires',{'nomOrganisme':'Louvet','nomUtilisateur':'Theo'}) }}"><img class="logo-icon" src="{{ asset('images/LOGO-BET.jpg') }}"></a>
            <h1 class="logo" >Visa 3000</h1>
            <ul class="navi">
                <li class="search"><a href="#" class="js-header-search-toggle"><i class="fa fa-search"></i></a></li>
                <li><a href="{{ path('visa_login')}}">Login</a></li>
            </ul>
        </header>

        <div class="main-content">
    		{% for msg in app.session.flashBag.get('success') %}
        		<div class="alert alert-success">
        			{{ msg| raw | convert_encoding('UTF-8', 'ISO-8859-1')}}
        		</div>
    		{% endfor %}
    		{% for msg in app.session.flashBag.get('error') %}
        		<div class="alert alert-error">
        			{{ msg }}
        		</div>
    		{% endfor %}

            {% block body %}{% endblock %}

        </div>

        <div class="footer">
            <p class="footer-text">&copy; BET LOUVET 2017</span></p>
        </div>

        {% block javascripts %}
            <script src="{{ asset('js/main.js') }}"></script>
            <script src="{{ asset('js/jquery/jquery.min.js') }}" ></script>
        {% endblock %}



    </body>
</html>
