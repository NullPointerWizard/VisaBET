<!DOCTYPE html>
<html>
    <head>

        {% block metacharset %}
            <meta charset="UTF-8" />
        {% endblock %}
        <title>{% block title %}Visa 3000{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
            <link rel="stylesheet" href="{{ asset('css/fonts.css') }}">
            <link rel="stylesheet" href="{{ asset('css/applicationVisa.css') }}">
            <link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/font-awesome.min.css') }}">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('check.ico') }}" />
    </head>
    <body>
    {% block allBody %}
        <div class="search-bar">
            <form method="GET" action="" class="js-sea-search sea-search">
                <input type="search" name="q" placeholder="Rechercher une affaire" autocomplete="off" class="search-input">
            </form>
        </div>

        <header class="header">
            <a href="{{ path('affaires') }}"><img class="logo-icon" src="{{ asset('images/LOGO-BET-3000.jpg') }}"></a>
            <h1 class="visa-title" >{% block pageTitle %}Visa 3000{% endblock %}</h1>
            <ul class="navi">
                {% if is_granted('ROLE_USER') %}
                    <li><b>{{ app.user.idOrganisme }}</b> {{ app.user.prenom }} {{ app.user.nom }} </li>
                    <li><a href="{{ path('visa_logout') }}">DÃ©connexion</a></li>
                {% else %}
                    <li><a href="{{ path('visa_login') }}">Connexion</a></li>
                {% endif %}
            </ul>
        </header>

        <div class="main-content">
    		{% for msg in app.session.flashBag.get('success') %}
        		<div class="alert alert-success">
        			{{ msg| raw | convert_encoding('UTF-8', 'ISO-8859-1')}}
        		</div>
    		{% endfor %}
    		{% for msg in app.session.flashBag.get('error') %}
        		<div class="alert alert-danger">
        			{{ msg }}
        		</div>
    		{% endfor %}

            {% block body %}

            {% endblock %}

        </div>

        <div class="footer">
            <p class="footer-text">&copy; BET LOUVET 2017</span></p>
        </div>

        {% block javascripts %}
            <script src="{{ asset('js/main.js') }}"></script>
            <script src="{{ asset('js/jquery/jquery.min.js') }}" ></script>
        {% endblock %}


    {% endblock %}
    </body>
</html>
